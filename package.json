{
  "name": "fontaine-monorepo",
  "preview": true,
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "description": "Automatic font fallback based on font metrics",
  "author": {
    "name": "Daniel Roe",
    "email": "daniel@roe.dev",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter fontaine --filter fontless build",
    "lint": "eslint .",
    "test:unit": "pnpm -r test:unit",
    "test:types": "pnpm -r test:types",
    "test:knip": "knip",
    "test:versions": "installed-check -d --workspace-ignore='packages/fontless/examples/*'",
    "postinstall": "simple-git-hooks install && pnpm --filter fontaine build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.14.1",
    "bumpp": "10.1.1",
    "changelogithub": "13.15.0",
    "eslint": "9.29.0",
    "installed-check": "9.3.0",
    "knip": "5.61.0",
    "lint-staged": "16.1.2",
    "nuxt": "^3.17.5",
    "simple-git-hooks": "2.13.0",
    "typescript": "5.8.3"
  },
  "resolutions": {
    "fontaine": "workspace:*",
    "fontless": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json,.*rc}": [
      "npx eslint --fix"
    ]
  }
}
