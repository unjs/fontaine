{
  "name": "fontaine-monorepo",
  "preview": true,
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "description": "Automatic font fallback based on font metrics",
  "author": {
    "name": "Daniel Roe",
    "email": "daniel@roe.dev",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint .",
    "test": "pnpm -r test",
    "postinstall": "simple-git-hooks install && pnpm -r build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.0",
    "bumpp": "10.1.0",
    "changelogithub": "^13.13.0",
    "eslint": "9.25.1",
    "knip": "^5.51.1",
    "lint-staged": "15.5.1",
    "simple-git-hooks": "2.13.0",
    "typescript": "5.8.3"
  },
  "resolutions": {
    "fontaine": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json,.*rc}": [
      "npx eslint --fix"
    ]
  }
}
