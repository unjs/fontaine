{
  "name": "fontaine",
  "type": "module",
  "version": "0.8.0",
  "description": "Automatic font fallback based on font metrics",
  "author": {
    "name": "Daniel Roe",
    "email": "daniel@roe.dev",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unjs/fontaine.git",
    "directory": "packages/fontaine"
  },
  "keywords": [
    "fonts",
    "cls",
    "web-vitals",
    "performance"
  ],
  "sideEffects": false,
  "imports": {
    "#capsize-font-metrics": "./dist/capsize-font-metrics.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "vitest",
    "demo": "vite dev playground",
    "demo:dev": "pnpm demo --config test/vite.config.mjs",
    "lint": "eslint .",
    "prepublishOnly": "pnpm lint && pnpm test",
    "test": "pnpm test:unit && pnpm test:types",
    "test:types": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@capsizecss/unpack": "^4.0.0",
    "css-tree": "^3.1.0",
    "magic-regexp": "^0.10.0",
    "magic-string": "^0.30.21",
    "pathe": "^2.0.3",
    "ufo": "^1.6.1",
    "unplugin": "^3.0.0"
  },
  "devDependencies": {
    "@capsizecss/metrics": "3.6.2",
    "@types/css-tree": "2.3.11",
    "@types/node": "24.10.13",
    "@types/serve-handler": "6.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "10.0.2",
    "get-port-please": "3.2.0",
    "serve-handler": "6.1.6",
    "tsdown": "0.20.3",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  }
}
